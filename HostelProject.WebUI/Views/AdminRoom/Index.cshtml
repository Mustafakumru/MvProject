@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}



<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Oda Görseli</th>
        <th>Oda Price</th>
        <th>Oda Tipi</th>
        <th>Oda Yatak sayısı</th>
        <th>Oda Banyo Sayısı</th>
        <th>Oda Açıklaması</th>
        <th>Personel Sil</th>
        <th>Personel Güncelle</th>
        <th>Personel Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
            count++;
        <tr>
            <th>@count</th>
            <td>@item.RoomNumber</td>
            <td>@item.RoomCoverImage</td>
            <td>@item.Price</td>
            <td>@item.Title</td>
            <td>@item.BedCount</td>
            <td>@item.BathCount</td>
            <td>@item.Description</td>
            <td><a href="/AdminRoom/DeleteRoom/@item.id" class="btn mb-1 btn-rounded btn-danger">Sil</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@item.id" class="btn mb-1 btn-rounded btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/AdminRoom/AddRoom/" class="btn mb-1 btn-rounded btn-info">Yeni Oda Girişi</a>


