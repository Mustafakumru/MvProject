@model UpdateRoomDto
@{
    ViewData["Title"] = "UpdateRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post">
    <input type="hidden" asp-for="id" />
    <label>Oda Numarası</label>
    <input type="text" asp-for="RoomNumber" class="form-control" />
    <br />
    <label>Oda Görseli</label>
    <input type="text" asp-for="RoomCoverImage" class="form-control" />
    <br />
    <label>Oda Fiyatı</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <label>Oda Tipi</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Oda Yatak Sayısı</label>
    <input type="text" asp-for="BedCount" class="form-control" />
    <br />
    <label>Oda Banyo Sayısı</label>
    <input type="text" asp-for="BathCount" class="form-control" />
    <br />
    <br />
    <label>Wifi</label>
    <input type="text" asp-for="Wifi" class="form-control" />
    <label>Oda Açıklaması</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <button class="btn btn-primary">Oda Güncelleme</button>
</form>


