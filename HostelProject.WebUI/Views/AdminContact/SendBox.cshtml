@model List<SendBoxDto>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">

        <div class="email-left-box">
            <div class="email-left-box">
                <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>

                <div class="mail-list mt-4">
                    <a href="/AdminContact/InBox/" class="list-group-item border-0 text-primary p-r-0"><i class="fa fa-inbox font-18 align-middle mr-2"></i> <b>Gelen Kutusu</b> <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.Inbox</span> </a>
                    <a href="/AdminContact/SendBox/" class="list-group-item border-0 text-info p-r-0"><i class="fa fa-paper-plane font-18 align-middle mr-2"></i>Giden Kutusu </a>@ViewBag.SendBox <a href="#" class="list-group-item border-0 text-danger p-r-0"><i class="fa fa-star-o font-18 align-middle mr-2">Önemli</i> <span class="badge badge- badge-danger float-right m-t-5"></span> </a>
                    <a href="#" class="list-group-item  border-0 text-warning p-r-0"><i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Taslaklar</a><a href="#" class="list-group-item border-0 text-dark p-r-0"><i class="fa fa-trash font-18 align-middle mr-2"></i>Çöp Kutusu</a>
                </div>
            @await Html.PartialAsync("SidebarAdminCategoriPartial")
        </div>
        <div class="email-right-box">
            <div role="toolbar" class="toolbar">
                <div class="btn-group">
                    <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                        Giden Mesajlar <span class="caret m-l-5"></span>
                    </button>
                </div>
            </div>
            <div class="email-list m-t-15">
                @foreach (var item in Model)
                {
                    <div class="message">
                        <a href="/AdminContact/MeesageDetailsBySendBox/@item.SendMessageID">
                            <div class="col-mail col-mail-1">
                                <div class="email-checkbox">
                                    <input type="checkbox" id="chk2">
                                    <label class="toggle" for="chk2"></label>
                                </div><span class="star-toggle ti-star"></span>
                            </div>
                            <div class="col-mail col-mail-2">
                                <div class="subject"><b>Konu: @item.Title</b> Alıcı:@item.ReceiverName</div>
                                <div class="date">@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

