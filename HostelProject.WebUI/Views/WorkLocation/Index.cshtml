@model  List<ResultWorkLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Lokasyon Adı</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model){
        count++;
        <tr>
            <td>@count</td>
            <td>@item.WorkLocationName?</td>
            <td>@item.WorkLocationCity?</td>
            <td><a href="/WorkLocation/DeleteWorkLocation/@item.WorkLocationID" class="btn mb-1 btn-rounded btn-danger">Sil</a></td>
            <td><a href="/WorkLocation/UpdateAddWorkLocation/@item.WorkLocationID" class="btn mb-1 btn-rounded btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/WorkLocation/AddWorkLocation/" class="btn mb-1 btn-rounded btn-info">Yeni Oda Girişi</a>

